<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activity.ChooseCrudActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@color/bkg"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bkg"
        android:paddingLeft="12dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bkg"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginStart="3dp"
        android:layout_gravity="center"
        android:text="CRUD database"
        android:textColor="@color/white"
        android:textSize="25sp" />
  </LinearLayout>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btnAdd"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:layout_margin="30dp"
      android:background="@drawable/edt_login_bkg"
      android:textColor="@color/bkg"
      android:textSize="16sp"
      android:text="Thêm sản phẩm"
      />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btnUpdate"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:layout_margin="30dp"
      android:background="@drawable/edt_login_bkg"
      android:textColor="@color/bkg"
      android:textSize="16sp"
      android:text="Chỉnh sửa sản phẩm"/>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btnDel"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:layout_margin="30dp"
      android:background="@drawable/edt_login_bkg"
      android:textColor="@color/bkg"
      android:textSize="16sp"
      android:text="Xóa sản phẩm"/>
  </LinearLayout>